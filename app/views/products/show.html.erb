<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Vendor:</strong>
  <%= @product.vendor&.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>

<p>
  <strong>Uploaded Files:</strong> | <strong>count: <%= @product.uploaded_files.size %> </strong>
  <% @product.uploaded_files.each do |uploaded_file| %>
  <p>
    <strong>Uploaded Files:</strong>
    <%= link_to uploaded_file.name, uploaded_file, download:true %>
  </p>
  <% end %>
</p>

<%= link_to 'Edit', edit_vendor_product_path(vendor_id: @product.vendor_id, id: @product.id) %> |
<%= link_to 'Back', vendor_products_path(vendor_id: @product.vendor_id) %>
